<p id="notice"><%= notice %></p>


<h1>SEARCH BAR</h1>

<%= form_tag(posts_path, :method => "get") do %>
    <%= select_tag :option, options_for_select([ "Title", "Content", "ALL" ], "#{params[:option]}") %>
    <%= text_field_tag :search, nil,  placeholder: "search here" %>
    <%= submit_tag "Search" %>
<% end %>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
